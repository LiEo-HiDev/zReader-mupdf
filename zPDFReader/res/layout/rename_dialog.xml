<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_step3" >

        <TextView
            android:id="@+id/renameTitle"
            style="@style/Typography_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rename" />

        <EditText
            android:id="@+id/editTextBookName"
            style="@style/Typography_Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_step3"
            android:ems="10"
            android:hint="book name" >
			
            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_step2"
        android:layout_marginRight="@dimen/padding_step2"
        android:gravity="right" >

        <Button
            android:id="@+id/buttonCancel"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingLeft="@dimen/padding_step2"
            android:paddingRight="@dimen/padding_step2"
            android:text="@string/big_cancel"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonRename"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingLeft="@dimen/padding_step2"
            android:paddingRight="@dimen/padding_step2"
            android:text="@string/big_rename"
            android:textColor="@color/accent_text_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
