<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_selector"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/BigCardImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_card_image_height"
        android:background="#bababa"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/BigCardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="@dimen/default_spacing_micro"
            android:paddingLeft="@dimen/default_spacing_minor"
            android:paddingRight="@dimen/default_spacing_minor"
            android:paddingTop="@dimen/default_spacing_minor"
            android:text="@string/new_york_first_time"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/BigCardMenu"
            android:layout_width="@dimen/icon_menu_width"
            android:layout_height="@dimen/icon_menu_height"
            android:paddingBottom="@dimen/icon_menu_padding"
            android:paddingLeft="@dimen/icon_menu_padding"
            android:paddingRight="@dimen/icon_menu_padding_right"
            android:paddingTop="@dimen/icon_menu_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_menu_overflow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/BigCardInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="@dimen/default_spacing_minor"
            android:paddingLeft="@dimen/default_spacing_minor"
            android:paddingRight="@dimen/default_spacing_minor"
            android:text="@string/se_ed"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/BigCardDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="@dimen/default_spacing_minor"
            android:paddingRight="@dimen/default_spacing_minor"
            android:text="@string/4_days_ago"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/daytext_color" />
    </LinearLayout>

</LinearLayout>
