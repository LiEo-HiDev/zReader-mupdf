<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_color"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.charsperline.maxwidth.MaxWidthLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_maxWidth="@dimen/layout_maxwidth"
                android:background="@drawable/bg_card_selector"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/default_spacing_major_up" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/medium_text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/BigCardInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingMultiplier="1.1"
                            android:text="@string/se_ed_book_center"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/BigCardDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingMultiplier="1.1"
                            android:text="@string/4_days_ago"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/daytext_color" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_spacing_major"
                        android:fontFamily="sans-serif-light"
                        android:lineSpacingMultiplier="1.1"
                        android:text="@string/loren_ipsum"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <!-- <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/default_spacing_major"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingMultiplier="1.0"
                            android:text="Follow"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/secondary_text_light" /> -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="@dimen/default_spacing_major"
                            android:layout_marginBottom="@dimen/default_spacing_minor"
                            android:background="@color/line_gray_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/default_spacing_minor" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-light"
                                android:gravity="right"
                                android:paddingRight="@dimen/default_spacing_major"
                                android:text="@string/se_ed"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <ImageView
                                android:id="@+id/imageButton1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:padding="@dimen/default_spacing_micro"  />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/default_spacing_minor" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-light"
                                android:gravity="right"
                                android:paddingRight="@dimen/default_spacing_major"
                                android:text="@string/se_ed_book_center"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <ImageView
                                android:id="@+id/imageButton1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:padding="@dimen/default_spacing_micro"  />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.charsperline.maxwidth.MaxWidthLinearLayout>
    </ScrollView>

</LinearLayout>
