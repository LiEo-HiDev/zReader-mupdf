<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/removeAdsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_drawer_item"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_marginBottom="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:padding="@dimen/padding_step_s"
            android:src="@drawable/ic_action_donate" />

        <TextView
            android:id="@+id/removeText"
            style="@style/Typography_Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:paddingBottom="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingTop="0dp"
            android:text="@string/remove_ads"
            android:textColor="@color/typography_color_secondarytext_icons" />
    </LinearLayout>

