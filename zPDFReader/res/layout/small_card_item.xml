<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/SmallCardImageLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp" >

        <ImageView
            android:id="@+id/SmallCardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_thumbnail2"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/SmallCardImageName"
            style="@style/Typography_Bokcover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/padding_step1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="4"
            android:text="Book name"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/SmallCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_step2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:lines="2"
            android:maxLines="2"
            android:paddingBottom="0dp"
            android:paddingLeft="@dimen/card_text_padding"
            android:paddingRight="@dimen/card_text_padding"
            android:paddingTop="@dimen/card_text_padding"
            android:singleLine="false"
            android:text="Book name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_title_color" />

        <ImageView
            android:id="@+id/fileOverflowMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:src="@drawable/ic_menu_moreoverflow_note" />

    </RelativeLayout>

    <TextView
        android:id="@+id/SmallCardInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="@dimen/card_text_padding"
        android:paddingLeft="@dimen/card_text_padding"
        android:paddingRight="@dimen/card_text_padding"
        android:singleLine="true"
        android:text="Day"
        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
        android:textColor="@color/text_days_color"
        android:textSize="@dimen/card_text_info_size" />

</LinearLayout>