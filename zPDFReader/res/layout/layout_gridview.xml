<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_thumbnail" >

    <GridView
        android:id="@+id/ThumbnailGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_thumbnail"
        android:clipToPadding="false"
        android:gravity="center"
        android:horizontalSpacing="@dimen/gridview_padding"
        android:numColumns="@integer/num_columns"
        android:paddingBottom="@dimen/padding_step1"
        android:paddingLeft="@dimen/padding_step1"
        android:paddingRight="@dimen/padding_step1"
        android:paddingTop="@dimen/padding_step3"
        android:verticalSpacing="@dimen/gridview_padding" >
    </GridView>

    <TextView
        android:id="@+id/textViewNoBookmarks"
        style="@style/Typography_Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif"
        android:text="@string/no_bookmark"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/secondary_text_dark"
        android:visibility="gone" />

</RelativeLayout>
